        addTests(tests64gc_fp, "questa")
else:
    for sim in sims:
        addTests(tests, sim)
        addTests(tests64gc_nofp, sim)
        addTests(tests64gc_fp, sim)
    # run derivative configurations in nightly regression
    if (nightly):
        addTests(derivconfigtests, defaultsim)

